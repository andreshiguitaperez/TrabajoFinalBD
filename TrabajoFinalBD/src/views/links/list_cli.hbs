<div class="container p-4">
    <div class="row">

        {{#each clientes}}
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <p class="m-2">
                            {{cedula}}
                        </p>
                        <p class="m-2">
                            {{nombre}}
                        </p>
                        <p class="m-2">
                            {{fecha_cumple}}
                        </p>
                        <p class="m-2">
                            {{telefono}}
                        </p>
                        <p class="m-2">
                            {{direccion}}
                        </p>
                        <p class="m-2">
                            {{pedido_id}}
                        </p>

                        <a href="/links/edit/{{cedula}}" class="btn btn-secondary">Editar Cliente</a>
                        <a href="/links/delete/{{cedula}}" class="btn btn-danger">Eliminar Cliente</a>
                        
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay usuarios guardados todav√≠a</p>
                    <a href="/links/add">Crea uno</a>
                </div>
            </div>
        {{/each}}

    </div>
</div>