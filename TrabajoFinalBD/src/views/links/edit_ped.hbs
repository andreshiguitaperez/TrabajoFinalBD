<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit_ped/{{pedido.id_pedido}}" method="POST">
                        <div class="form-group">
                            <label for=""><b>Pedido local</b></label>
                            <input type="text" value="{{pedido.pedido_local}}" name="pedido_local" class="form-control" placeholder="Nombre">
                        </div>
                        <div class="form-group">
                            <label for=""><b>Pedido a domicilio</b></label>
                            <input type="text" value="{{pedido.pedido_domicilio}}" name="pedido_domicilio" class="form-control" placeholder="Fecha cumpleaños">
                        </div>
                        <div class="form-group">
                            <label for=""><b>Cedula del cliente</b></label>
                            <input type="text" value="{{pedido.cliente_id}}" name="cliente_id" class="form-control" placeholder="Teléfono">
                        </div>
                        <div class="form-group">
                            <label for=""><b>Cedula del mesero</b></label>
                            <input type="text" value="{{pedido.mesero_id}}" name="mesero_id" class="form-control" placeholder="Dirección">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Actualizar Pedido
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>