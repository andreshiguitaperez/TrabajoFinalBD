<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/add_ped" method="POST">
                        <div class="form-group">
                            <label for=""><b>Id del pedido</b></label>
                            <input type="number" class="form-control" name="id_pedido" placeholder="Id del pedido" autofocus>
                        </div>
                        <div class="form-group">
                            <label for=""><b>Pedido local</b></label>
                            <input type="text" name="pedido_local" class="form-control" placeholder="Es pedido local">
                        </div>
                        <div class="form-group">
                            <label for=""><b>Pedido a domicilio</b></label>
                            <input type="text" name="pedido_domicilio" class="form-control" placeholder="Es pedido domicilio">
                        </div>
                        <div class="form-group">
                            <label for=""><b>Cedula del cliente</b></label>
                            <input type="number" name="cliente_id" class="form-control" placeholder="Cedula del cliente">
                        </div>
                        <div class="form-group">
                            <label for=""><b>Cedula del mesero</b></label>
                            <input type="number" name="mesero_id" class="form-control" placeholder="Cedula del mesero">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar Pedido
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>